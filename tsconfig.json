{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "@loopback/build/config/tsconfig.common.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "target": "ES6",
    "moduleResolution": "Node"
  },
  "include": ["src"],
  "ts-node": {
    "files": true
  }
}
